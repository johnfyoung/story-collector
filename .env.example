# Appwrite Configuration (Required for cloud sync)
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your_project_id_here
VITE_APPWRITE_DATABASE_ID=your_database_id_here
VITE_APPWRITE_COLLECTION_ID=your_collection_id_here
VITE_APPWRITE_BUCKET_ID=your_bucket_id_here

# Cloudinary Configuration (Required for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset_here
VITE_CLOUDINARY_UPLOAD_FOLDER=story-collector

# OpenAI Configuration (Optional - for AI image generation)
# Get your API key from: https://platform.openai.com/api-keys
# Supported models: dall-e-2, dall-e-3, gpt-image-1
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here
VITE_OPENAI_IMAGE_MODEL=dall-e-3
